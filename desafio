#include <stdio.h>

// FunÃ§Ã£o para calcular o super poder de uma carta
float super_poder(float populacao, float area_em_km, float pib, float pontos_turisticos, float pib_percapita) {
    return populacao + area_em_km + pib + pontos_turisticos + pib_percapita;
}

int main() {
    // Carta 1
    char estado1[100];
    char cod_da_carta1[100];
    char nome_da_cidade1[100];
    int populacao1, pontos_turisticos1;
    float pib1, area_em_km1;
    float pib_per_capita1;

    // Carta 2
    char estado2[100];
    char cod_da_carta2[100];
    char nome_da_cidade2[100];
    int populacao2, pontos_turisticos2;
    float pib2, area_em_km2;
    float pib_per_capita2;

    //arta 1
    printf("Qual o nome do primeiro estado? \n");
    scanf("%s", estado1);

    printf("Qual o cÃ³digo da primeira carta? \n");
    scanf("%s", cod_da_carta1);

    printf("Qual o nome da cidade? \n");
    scanf("%s", nome_da_cidade1);

    printf("Qual o nÃºmero populacional da cidade de %s? \n", nome_da_cidade1);
    scanf("%d", &populacao1);

    printf("Qual o PIB de %s? \n", nome_da_cidade1);
    scanf("%f", &pib1);

    printf("Qual a Ã¡rea em km de %s? \n", nome_da_cidade1);
    scanf("%f", &area_em_km1);

    printf("Quantos Pontos TurÃ­sticos tem %s? \n", nome_da_cidade1);
    scanf("%d", &pontos_turisticos1);

    printf("\n");

    //Carta 2

    printf("Qual o nome do segundo estado? \n");
    scanf("%s", estado2);

    printf("Qual o cÃ³digo da segunda carta? \n");
    scanf("%s", cod_da_carta2);

    printf("Qual o nome da cidade? \n");
    scanf("%s", nome_da_cidade2);

    printf("Qual o nÃºmero populacional da cidade de %s? \n", nome_da_cidade2);
    scanf("%d", &populacao2);

    printf("Qual o PIB de %s? \n", nome_da_cidade2);
    scanf("%f", &pib2);

    printf("Qual a Ã¡rea em km de %s? \n", nome_da_cidade2);
    scanf("%f", &area_em_km2);

    printf("Quantos Pontos TurÃ­sticos tem %s? \n", nome_da_cidade2);
    scanf("%d", &pontos_turisticos2);

    // Dados

    float densidade1 = populacao1 / area_em_km1;
    float densidade2 = populacao2 / area_em_km2;

    pib_per_capita1 = pib1 / populacao1;
    pib_per_capita2 = pib2 / populacao2;

    float poder1 = super_poder(populacao1, area_em_km1, pib1, pontos_turisticos1, pib_per_capita1);
    float poder2 = super_poder(populacao2, area_em_km2, pib2, pontos_turisticos2, pib_per_capita2);

    // Exibir carta 1

    printf("\nCarta 1:\n");
    printf("Estado: %s\n", estado1);
    printf("CÃ³digo: %s\n", cod_da_carta1);
    printf("Nome da cidade: %s\n", nome_da_cidade1);
    printf("PopulaÃ§Ã£o: %d\n", populacao1);
    printf("Ãrea: %.2f kmÂ²\n", area_em_km1);
    printf("PIB: %.2f\n", pib1);
    printf("Pontos TurÃ­sticos: %d\n", pontos_turisticos1);
    printf("Densidade Populacional: %.2f habitantes/kmÂ²\n", densidade1);
    printf("PIB per capita: %.2f\n", pib_per_capita1);

    // Exibir carta 2

    printf("\nCarta 2:\n");
    printf("Estado: %s\n", estado2);
    printf("CÃ³digo: %s\n", cod_da_carta2);
    printf("Nome da cidade: %s\n", nome_da_cidade2);
    printf("PopulaÃ§Ã£o: %d\n", populacao2);
    printf("Ãrea: %.2f kmÂ²\n", area_em_km2);
    printf("PIB: %.2f\n", pib2);
    printf("Pontos TurÃ­sticos: %d\n", pontos_turisticos2);
    printf("Densidade Populacional: %.2f habitantes/kmÂ²\n", densidade2);
    printf("PIB per capita: %.2f\n", pib_per_capita2);

    // ComparaÃ§Ãµes

    printf("\nComparaÃ§Ãµes:\n");

    printf("PopulaÃ§Ã£o: %s\n", populacao1 > populacao2 ? "Carta 1 venceu (1)" : "Carta 2 venceu (0)");
    printf("Ãrea: %s\n", area_em_km1 > area_em_km2 ? "Carta 1 venceu (1)" : "Carta 2 venceu (0)");
    printf("PIB: %s\n", pib1 > pib2 ? "Carta 1 venceu (1)" : "Carta 2 venceu (0)");
    printf("Pontos TurÃ­sticos: %s\n", pontos_turisticos1 > pontos_turisticos2 ? "Carta 1 venceu (1)" : "Carta 2 venceu (0)");
    printf("Densidade Populacional: %s\n", densidade1 < densidade2 ? "Carta 1 venceu (1)" : "Carta 2 venceu (0)");
    printf("PIB per Capita: %s\n", pib_per_capita1 > pib_per_capita2 ? "Carta 1 venceu (1)" : "Carta 2 venceu (0)");

    // Super poder final
    printf("\nSuper Poder Carta 1: %.2f\n", poder1);
    printf("Super Poder Carta 2: %.2f\n", poder2);

    if (poder1 > poder2) {
        printf("ğŸ† Carta 1 Ã© a vencedora geral!\n");
    } else if (poder1 < poder2) {
        printf("ğŸ† Carta 2 Ã© a vencedora geral!\n");
    } else {
        printf("ğŸ¤ Empate geral!\n");
    }

    return 0;
}
